# Minimalistic window, no title bars, no rounded corders
window-decoration=false
window-decoration=0

# Whatever is selected is copied into the system clipboard
copy-on-select=clipboard

# My font of the choice
font-family = Iosevka Term
font-family-bold = Iosevka Term Medium
font-family-bold-italic = Iosevka Term Medium
font-family-italic = Iosevka Term

font-style-italic = false
font-style-bold-italic = false
font-synthetic-style = no-italic,no-bold-italic

font-size=15

# Sometimes ExUnit may print something in black on black...
minimum-contrast=1.5

# Once maximized, stay maximized
window-save-state=always

# Non-native fullscreen, but do leave the menu bar visible
macos-non-native-fullscreen=visible-menu

# Finally
macos-option-as-alt=true

# Cmd+Esc shows quick terminal
# keybind = global:super+escape=toggle_quick_terminal

# Don't quit on Cmd+Q
keybind = super+q=ignore

# DO quit (without warning!) on Cmd+Q when pressed inside the macOS app switcher
confirm-close-surface = false

# Disable ligatures
font-feature=-calt
font-feature=-liga
font-feature=-dlig

# The padding is black
background=black

###########################################################################
# TMUX integrations
#
# !!! NOTE that my tmux prefix is <c-s> (handy and relaxing on Dvorak), so,
# your '\x13' part will be different!
###########################################################################

# Cmd+N picks the corresponding tmux window
keybind = super+Digit1=text:\x131
keybind = super+Digit2=text:\x132
keybind = super+Digit3=text:\x133
keybind = super+Digit4=text:\x134
keybind = super+Digit5=text:\x135
keybind = super+Digit6=text:\x136
keybind = super+Digit7=text:\x137
keybind = super+Digit8=text:\x138
keybind = super+Digit9=text:\x139

# Go to Next/Prev tmux window just like with tabs in Chrome
# This again needs to take Dvorak into account
keybind = super+shift+Equal=text:\x13n
keybind = super+shift+Minus=text:\x13p

# New tmux window on Cmd+t
keybind = super+t=text:\x13c

# Press cmd+shift+alt+[|] to move the current tmux window left/right
keybind = super+shift+alt+Equal=text:\x13\x0c
keybind = super+shift+alt+Minus=text:\x13\x08

custom-shader = ~/.config/ghostty/shaders/shader.glsl